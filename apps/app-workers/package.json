{
  "name": "@cat/app-workers",
  "version": "0.1.0",
  "license": "MIT",
  "keywords": [
    "plugins",
    "typescript",
    "types",
    "cat"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils.js"
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "vite build",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --fix --type-aware",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit -p tsconfig.lib.json"
  },
  "devDependencies": {
    "@cat/eslint-config": "workspace:*",
    "@types/lodash-es": "^4.17.12"
  },
  "peerDependencies": {
    "@cat/plugin-core": "workspace:*",
    "@cat/db": "workspace:*",
    "@cat/shared": "workspace:*",
    "@cat/app-server-shared": "workspace:*",
    "zod": "^4.1.12",
    "bullmq": "^5.58.4",
    "lodash-es": "^4.17.21",
    "dotenv": "^17.2.3",
    "undici": "^7.16.0",
    "unplugin-dts": "1.0.0-beta.6",
    "vite": "^7.1.12"
  }
}
