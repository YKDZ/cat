{
  "name": "@cat/app-api",
  "version": "0.1.0",
  "license": "MIT",
  "keywords": [
    "plugins",
    "typescript",
    "types",
    "cat"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./trpc": {
      "types": "./dist/trpc/index.d.ts",
      "import": "./dist/trpc.js"
    },
    "./trpc/client": {
      "types": "./dist/trpc/client.d.ts",
      "import": "./dist/trpc/client.js"
    },
    "./trpc/sscClient": {
      "types": "./dist/trpc/sscClient.d.ts",
      "import": "./dist/trpc/sscClient.js"
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "vite build",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --fix --type-aware",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit -p tsconfig.lib.json"
  },
  "devDependencies": {
    "@cat/eslint-config": "workspace:*",
    "unplugin-dts": "1.0.0-beta.6",
    "vite": "^7.3.0"
  },
  "peerDependencies": {
    "@cat/app-server-shared": "workspace:*",
    "@cat/app-workers": "workspace:*",
    "@cat/db": "workspace:*",
    "@cat/plugin-core": "workspace:*",
    "@cat/shared": "workspace:*",
    "@trpc/client": "^11.5.1",
    "@trpc/server": "^11.5.1",
    "devalue": "^5.5.0",
    "vike": "^0.4.240",
    "zod": "^4.1.12"
  }
}
