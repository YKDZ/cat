{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "CatPlugin Manifest",
  "description": "Schema for plugin system manifest",
  "type": "object",
  "required": ["id", "entry", "version"],
  "properties": {
    "$schema": {
      "description": "Optional JSON Schema identifier (URL or file path)",
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "string",
          "pattern": "^(\\.{0,2}/|[A-Za-z]:\\\\).+"
        }
      ]
    },
    "id": {
      "type": "string",
      "description": "Unique plugin identifier"
    },
    "entry": {
      "type": "string",
      "description": "Entry file path (relative or absolute)"
    },
    "version": {
      "type": "string",
      "description": "Plugin version"
    },
    "iconURL": {
      "type": "string",
      "format": "uri",
      "description": "Icon URL for the plugin"
    },
    "services": {
      "type": "array",
      "description": "Services plugin provided",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Service ID"
          },
          "type": {
            "type": "string",
            "enum": [
              "TERM_SERVICE",
              "TRANSLATION_ADVISOR",
              "TRANSLATABLE_FILE_HANDLER",
              "STORAGE_PROVIDER",
              "AUTH_PROVIDER",
              "TEXT_VECTORIZER"
            ]
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "Tags for categorization",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "config": {
      "description": "Standard JSON Schema for this config",
      "$ref": "https://json-schema.org/draft-07/schema"
    }
  },
  "additionalProperties": false
}
