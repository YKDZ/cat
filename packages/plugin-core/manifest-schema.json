{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "CatPlugin Manifest",
  "description": "Schema for plugin system manifest",
  "type": "object",
  "required": [
    "id",
    "entry",
    "version"
  ],
  "properties": {
    "$schema": {
      "description": "Optional JSON Schema identifier (URL or file path)",
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "string",
          "pattern": "^(\\.{0,2}/|[A-Za-z]:\\\\).+"
        }
      ]
    },
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(?:[A-Za-z0-9\\-_.!~*'()]+|%[0-9A-Fa-f]{2})+$",
      "description": "Unique plugin identifier. It needs to be a string that can be used for URL fragments"
    },
    "entry": {
      "type": "string",
      "description": "Entry file path (relative or absolute)"
    },
    "version": {
      "type": "string",
      "description": "Plugin version"
    },
    "iconURL": {
      "type": "string",
      "format": "uri",
      "description": "Icon URL for the plugin"
    },
    "services": {
      "type": "array",
      "description": "Services plugin provided",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Service ID"
          },
          "type": {
            "type": "string",
            "enum": [
              "TERM_EXTRACTOR",
              "TERM_ALIGNER",
              "QA_CHECKER",
              "TOKENIZER",
              "TRANSLATION_ADVISOR",
              "FILE_IMPORTER",
              "FILE_EXPORTER",
              "STORAGE_PROVIDER",
              "AUTH_PROVIDER",
              "TEXT_VECTORIZER",
              "VECTOR_STORAGE",
              "MFA_PROVIDER"
            ]
          }
        },
        "required": [
          "id",
          "type"
        ],
        "additionalProperties": false
      }
    },
    "config": {
      "description": "Standard JSON Schema for this config",
      "$ref": "https://json-schema.org/draft-07/schema"
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "slot": {
            "type": "string"
          },
          "skeleton": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "url",
          "slot"
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}