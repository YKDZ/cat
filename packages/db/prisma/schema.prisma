datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider        = "prisma-client"
    previewFeatures = ["fullTextSearchPostgres"]
    output          = "../src/generated/prisma"
    moduleFormat    = "esm"
}

generator json {
    provider = "prisma-json-types-generator"
}
