{
  "name": "@cat/db",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "src",
    "dist",
    "drizzle/",
    "package.json",
    "drizzle.config.ts"
  ],
  "scripts": {
    "build": "nx vite:build",
    "lint": "oxlint --type-aware",
