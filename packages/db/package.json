    "drizzle-kit": "1.0.0-beta.8-734e789",
    "drizzle-seed": "^0.3.1",
    "unplugin-dts": "1.0.0-beta.6",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@cat/shared": "workspace:*",
    "cldr-core": "^48.0.0",
    "dotenv": "^17.2.3",
