{
  "$schema": "../../plugin-core/manifest-schema.json",
  "id": "oidc-auth-provider",
  "version": "0.1.0",
  "entry": "dist/index.js",
  "iconURL": "https://unocss.dev/logo.svg",
  "config": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "default": "My OIDC"
        },
        "scopes": {
          "type": "string",
          "default": "openid profile email"
        },
        "clientId": {
          "type": "string",
          "default": "xxx"
        },
        "clientSecret": {
          "type": "string",
          "default": "xxx"
        },
        "issuer": {
          "type": "string",
          "format": "url",
          "default": "http://localhost:4000/"
        },
        "authURI": {
          "type": "string",
          "format": "url",
          "default": "http://localhost:4000/"
        },
        "tokenURI": {
          "type": "string",
          "format": "url",
          "default": "http://localhost:4000/"
        },
        "userInfoURI": {
          "type": "string",
          "format": "url",
          "default": "http://localhost:4000/"
        },
        "logoutURI": {
          "type": "string",
          "format": "url",
          "default": "http://localhost:4000/"
        },
        "jwksURI": {
          "type": "string",
          "format": "url",
          "default": "http://localhost:4000/"
        }
      }
    }
  }
}
