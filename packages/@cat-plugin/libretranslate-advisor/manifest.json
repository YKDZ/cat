{
  "$schema": "../../plugin-core/manifest-schema.json",
  "id": "libretranslate-advisor",
  "entry": "dist/index.js",
  "version": "0.1.0",
  "iconURL": "https://unocss.dev/logo.svg",
  "services": [
    {
      "id": "libretranslate",
      "type": "TRANSLATION_ADVISOR"
    }
  ],
  "config": {
    "type": "object",
    "properties": {
      "api": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "url",
            "default": "http://localhost:5000/"
          },
          "key": {
            "type": "string",
            "default": "your api key",
            "x-secret": true
          },
          "alternatives-amount": {
            "type": "number",
            "default": 2
          }
        }
      },
      "base": {
        "type": "object",
        "properties": {
          "advisor-name": {
            "type": "string",
            "default": "LibreTranslate"
          }
        }
      }
    }
  }
}
