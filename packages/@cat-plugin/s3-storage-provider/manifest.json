{
  "$schema": "../../plugin-core/manifest-schema.json",
  "id": "s3-storage-provider",
  "version": "0.1.0",
  "entry": "dist/index.js",
  "iconURL": "https://unocss.dev/logo.svg",
  "services": [
    {
      "id": "S3",
      "type": "STORAGE_PROVIDER"
    }
  ],
  "tags": ["storage-provider"],
  "config": {
    "type": "object",
    "properties": {
      "s3": {
        "type": "object",
        "properties": {
          "endpoint-url": {
            "type": "string",
            "default": "https://s3.amazonaws.com"
          },
          "bucket-name": {
            "type": "string",
            "default": "cat"
          },
          "region": {
            "type": "string",
            "default": "auto"
          },
          "acl": {
            "type": "string",
            "enum": [
              "authenticated-read",
              "aws-exec-read",
              "bucket-owner-full-control",
              "bucket-owner-read",
              "private",
              "public-read",
              "public-read-write"
            ],
            "default": "private"
          },
          "access-key-id": {
            "type": "string",
            "default": "admin"
          },
          "secret-access-key": {
            "type": "string",
            "default": "secret",
            "x-secret": true
          },
          "force-path-style": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "storage": {
        "type": "object",
        "properties": {
          "basic-path": {
            "type": "string",
            "default": "uploads"
          }
        }
      }
    }
  }
}
