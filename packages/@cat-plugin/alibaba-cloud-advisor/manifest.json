{
  "$schema": "../../plugin-core/manifest-schema.json",
  "id": "alibaba-cloud-advisor",
  "entry": "dist/index.js",
  "iconURL": "https://unocss.dev/logo.svg",
  "tags": [
    "translation-advisor"
  ],
  "configs": [
    {
      "key": "advisor-name",
      "schema": {
        "type": "string",
        "default": "LibreTranslate"
      }
    },
    {
      "key": "api",
      "schema": {
        "type": "object",
        "properties": {
          "endpoint": {
            "type": "string",
            "format": "url",
            "default": "http://libreTranslate:5000/"
          },
          "version": {
            "type": "string",
            "default": "v2"
          },
          "key-id": {
            "type": "string",
            "default": "your api key",
            "x-secret": true
          },
          "key-secret": {
            "type": "number",
            "default": 2
          }
        }
      }
    }
  ]
}