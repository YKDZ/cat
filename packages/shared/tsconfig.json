{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "outDir": "./dist",
  },
  "types": [
    "vite/client"
  ],
  "include": [
    "src/**/*.ts",
    "src/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}