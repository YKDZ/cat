{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        ".env",
        "package.json",
        "**.ts",
        "src/**"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "inputs": [
        "src/**"
      ]
    },
    "start": {
      "persistent": true,
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "persistent": true,
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "format": {
      "dependsOn": [
        "^format"
      ],
      "inputs": [
        "src/**",
        "*.json",
        "*.ts",
        ".env"
      ]
    },
    "format:check": {
      "dependsOn": [
        "^format:check"
      ],
      "inputs": [
        "src/**",
        "*.json",
        "*.ts",
        ".env"
      ]
    },
    "clean": {
      "persistent": true,
      "cache": false
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "REDIS_URL",
    "URL",
    "PORT",
    "LOCAL_STORAGE_ROOT_DIR",
    "S3_ACCESS_KEY_ID",
    "S3_SECRET_ACCESS_KEY",
    "S3_REGION",
    "S3_ACCELERATE_URL",
    "S3_UPLOAD_BUCKET_URL",
    "S3_UPLOAD_BUCKET_NAME",
    "S3_FORCE_PATH_STYLE",
    "S3_ACL",
    "OIDC_CLIENT_ID",
    "OIDC_CLIENT_SECRET",
    "OIDC_ISSUER",
    "OIDC_AUTH_URI",
    "OIDC_TOKEN_URI",
    "OIDC_USERINFO_URI",
    "OIDC_LOGOUT_URI",
    "OIDC_JWKS_URI",
    "OIDC_DISPLAY_NAME",
    "OIDC_SCOPES"
  ]
}